{
  "name": "infinitum-music-activity",
  "version": "1.0.0",
  "description": "Infinitum Music Activity: Cross-platform music presence for Discord and more.",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "package": "electron-builder build --mac --win --publish never",
    "dist": "electron-builder"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "node-osascript": "^2.1.0",
    "electron-store": "^8.1.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "@types/node": "^20.10.0",
    "@types/electron": "^1.6.10",
    "@types/node-fetch": "^2.6.11",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.10",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.infinitumimagery.musicpresence",
    "productName": "Infinitum Music Activity",
    "mac": { "target": ["dmg", "zip"] },
    "win": { "target": ["nsis", "portable"] },
    "linux": { "target": ["AppImage", "deb", "rpm"] },
    "files": ["dist/**/*", "assets/**/*"]
  }
} 